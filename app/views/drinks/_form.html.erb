<%= form_with model: @drink, html: { class: 'flex flex-col gap-4 w-1/3 mt-6', id: 'drink-form' } do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-input" %>
    <% if @drink.errors[:name].any? %>
      <div class="text-red-600">
        <% @drink.errors.full_messages_for(:name).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: "form-input" %>
    <% if @drink.errors[:description].any? %>
      <div class="text-red-600">
        <% @drink.errors.full_messages_for(:description).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <div class="flex gap-2 items-center">
      <%= f.label :alcoholic %>
      <%= f.check_box :alcoholic %>
    </div>
    <% if @drink.errors[:alcoholic].any? %>
      <div class="text-red-600">
        <% @drink.errors.full_messages_for(:alcoholic).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/png,image/jpeg,image/jpg', class: "form-input" %>
    <% if @drink.errors[:image].any? %>
      <div class="text-red-600">
        <% @drink.errors.full_messages_for(:image).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex justify-center">
    <%= f.submit "Salvar bebida", class: "mt-8 cursor-pointer bg-[#5395cf] py-3 px-4 rounded-lg font-bold hover:bg-[#3f729e] duration-200" %>
  </div>
<% end %>
