<%= form_with model: [@portionable, @portion], html: { class: 'flex flex-col w-1/3 mt-6', id: 'portion-form' } do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-input" %>
    <% if @portion.errors[:description].any? %>
      <div class="text-red-600">
        <% @portion.errors.full_messages_for(:description).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>

    <%= f.label :price %>
    <%= f.number_field :price, step: 0.01, min: 0, class: "form-input", placeholder: "0.00" %>
    <% if @portion.errors[:price].any? %>
      <div class="text-red-600">
        <% @portion.errors.full_messages_for(:price).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex justify-center">
    <%= f.submit "Salvar porção", class: "mt-8 cursor-pointer bg-[#5395cf] py-3 px-4 rounded-lg font-bold hover:bg-[#3f729e] duration-200" %>
  </div>
<% end %>
