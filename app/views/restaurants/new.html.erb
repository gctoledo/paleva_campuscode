<%= render partial: 'components/session_title', locals: { title: 'Cadastro de restaurante' } %>

<%= form_with model: @restaurant, html: { class: 'flex flex-col gap-4 w-1/3 mt-6', id: 'create-restaurant-form' } do |f| %>
  <div class="space-y-1 flex flex-col">
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name, class: "form-input" %>

    <% if @restaurant.errors[:trade_name].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:trade_name).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-1 flex flex-col">
    <%= f.label :legal_name %>
    <%= f.text_field :legal_name, class: "form-input" %>

    <% if @restaurant.errors[:legal_name].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:legal_name).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-1 flex flex-col">
    <%= f.label :cnpj %>
    <%= f.number_field :cnpj, class: "form-input" %>

    <% if @restaurant.errors[:cnpj].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:cnpj).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-1 flex flex-col">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-input" %>

    <% if @restaurant.errors[:address].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:address).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-1 flex flex-col">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-input" %>

    <% if @restaurant.errors[:phone].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:phone).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-1 flex flex-col">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-input" %>

    <% if @restaurant.errors[:email].any? %>
      <div class="text-red-600">
        <% @restaurant.errors.full_messages_for(:email).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit 'Criar restaurante', class: "cursor-pointer bg-[#5395cf] py-3 rounded-lg font-bold hover:bg-[#3f729e] duration-200 w-full" %>
  </div>
<% end %>