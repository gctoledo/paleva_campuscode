<div class="w-96 py-6 rounded-lg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col gap-4 w-full px-6' }) do |f| %>
    <div class="space-y-1">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-black" %>
    </div>

    <div class="space-y-1">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full text-black" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Entrar", class: "cursor-pointer bg-[#5395cf] py-3 rounded-lg font-bold hover:bg-[#3f729e] duration-200" %>

  <% end %>

  <%= link_to "NÃ£o possui conta? Cadastre-se agora!", new_registration_path(resource_name), class: "flex w-full justify-center mt-5" %>
</div>
