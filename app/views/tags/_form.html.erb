<%= form_with model: @tag, html: { class: 'flex flex-col w-1/3 mt-6', id: 'tag-form' } do |f| %>
  <div>
    <%= f.label :name, class: "block text-gray-300 mb-2" %>
    <%= f.text_field :name, class: "form-input" %>
    <% if @tag.errors[:name].any? %>
      <div class="text-red-600">
        <% @tag.errors.full_messages_for(:name).each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="flex justify-center">
    <%= f.submit "Salvar marcador", class: "mt-8 cursor-pointer bg-[#5395cf] py-3 px-4 rounded-lg font-bold hover:bg-[#3f729e] duration-200" %>
  </div>
<% end %>
